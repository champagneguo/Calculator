<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simplePad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <com.android.calculator2.ColorButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_clear_nor" />

        <com.android.calculator2.ColorButton
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_del" />

        <com.android.calculator2.ColorButton
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_div"
            android:text="@string/div"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_mul"
            android:text="@string/mul"
            android:textColor="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <com.android.calculator2.ColorButton
            android:id="@+id/digit7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_7"
            android:text="@string/digit7"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_8"
            android:text="@string/digit8"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_9"
            android:text="@string/digit9"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_minus"
            android:text="@string/minus"
            android:textColor="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <com.android.calculator2.ColorButton
            android:id="@+id/digit4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_4"
            android:text="@string/digit4"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_5"
            android:text="@string/digit5"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/digit6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/digit_6"
            android:text="@string/digit6"
            android:textColor="@android:color/transparent" />

        <com.android.calculator2.ColorButton
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_plus"
            android:text="@string/plus"
            android:textColor="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:divider="@null"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.android.calculator2.ColorButton
                    android:id="@+id/digit1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/digit_1"
                    android:text="@string/digit1"
                    android:textColor="@android:color/transparent" />

                <com.android.calculator2.ColorButton
                    android:id="@+id/digit2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/digit_2"
                    android:text="@string/digit2"
                    android:textColor="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <com.android.calculator2.ColorButton
                    android:id="@+id/digit0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/digit_0"
                    android:text="@string/digit0"
                    android:textColor="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.android.calculator2.ColorButton
                    android:id="@+id/digit3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/digit_3"
                    android:text="@string/digit3"
                    android:textColor="@android:color/transparent" />

                <com.android.calculator2.ColorButton
                    android:id="@+id/dot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_dot"
                    android:text="@string/dot"
                    android:textColor="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.android.calculator2.ColorButton
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_equal"
                    android:text="@string/equal"
                    android:textColor="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>